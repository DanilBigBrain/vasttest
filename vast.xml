<VAST version="3.0">
    <Ad id="1">
        <InLine>
            <AdSystem>Google IMA</AdSystem>
            <AdTitle>Выбери видео</AdTitle>
            <Description>Кликни на одно из видео</Description>

            <!-- Отслеживание событий -->
            <Impression><![CDATA[https://tracker.com/impression]]></Impression>

            <Creatives>
                <Creative sequence="1" AdID="100">
                    <Linear>
                        <Duration>00:00:10</Duration>

                        <TrackingEvents>
                            <Tracking event="start"><![CDATA[https://tracker.com/start]]></Tracking>
                            <Tracking event="complete"><![CDATA[https://tracker.com/complete]]></Tracking>
                            <Tracking event="click"><![CDATA[https://tracker.com/click]]></Tracking>
                        </TrackingEvents>

                        <!-- Передача ссылок на видео -->
                        <AdParameters>
                            <![CDATA[
                                {
                                    "video1": "https://www.w3schools.com/html/mov_bbb.mp4",
                                    "video2": "https://samplelib.com/lib/preview/mp4/sample-5s.mp4",
                                    "clickTrack1": "https://tracker.com/click_video1",
                                    "clickTrack2": "https://tracker.com/click_video2"
                                }
                            ]]>
                        </AdParameters>

                        <MediaFiles>
                            <MediaFile id="1" delivery="progressive" apiFramework="VPAID" type="application/javascript" width="640" height="360">
                                <![CDATA[https://ТВОЙ_СЕРВЕР/vpaid.js]]>
                            </MediaFile>
                        </MediaFiles>
                    </Linear>
                </Creative>
            </Creatives>
        </InLine>
    </Ad>
</VAST>
